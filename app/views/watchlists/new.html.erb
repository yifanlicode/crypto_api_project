<div class="container" style="height:600px">
  <div class="row justify-content-center">
  <div class="col-md-6">
 <br>

       <h3 class="fw-normal mb-4">Create a New Watchlist</h3>


      <%= form_with(model: @watchlist, url: watchlists_path) do |form| %>
        <!-- Form fields for watchlist attributes -->
        <div class="mb-3">
        <div> 
            Watchlist <%= form.label :name %> : 
            <%= form.text_field :name, class: "form-control  placeholder-gray" %> 
         <div>
        </div>

 <br>

 <br>

 <br>
  <!-- Form submit button -->
 
     <div class="actions justify-content-center">
      <%# back to watchlist page %>
        <%= link_to "Back", watchlists_path, class: "btn btn-secondary me-2" %>
         <%= form.submit "Create Watchlist",class: "btn btn-primary me-2" %>       
      </div>
      <% end %>
    </div>
  </div>
</div>
