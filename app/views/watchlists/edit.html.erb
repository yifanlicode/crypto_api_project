<div class="container" style="height:600px">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h3 class="fw-normal mb-4">Edit Watchlist</h3>

      <%= form_for(@watchlist, url: watchlist_path(@watchlist), method: :patch) do |f| %>
        <div class="mb-3">
          <div>
            Watchlist <%= f.label :name %> :
            <%= f.text_field :name, class: "form-control placeholder-gray" %>
          </div>
        </div>

        <div class="actions justify-content-center">
          <%= link_to "Back", watchlists_path, class: "btn btn-secondary" %>
          <%= f.submit "Update", class: "btn btn-primary me-2" %>
          <%= button_to "Delete", watchlist_path(@watchlist), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
