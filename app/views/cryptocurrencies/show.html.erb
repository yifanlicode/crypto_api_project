<%= render @cryptocurrency %>

 <div class="my-3">
  <div class="row justify-content-center">
    <div class="col-auto">
      <%= link_to "Back to Coins List",
          cryptocurrencies_path,
          class: "btn btn-secondary" %>
    </div>
    
    <div class="col-auto">
      <%= link_to "Edit this cryptocurrency",
          edit_cryptocurrency_path(@cryptocurrency),
          class: "btn btn-primary" %>
    </div>
    <div class="col-auto">
      <%= button_to "Delete this cryptocurrency",
          @cryptocurrency,
          class: "btn btn-dark",
          method: :delete,
          data: { confirm: "Are you sure?" } %>
    </div>
  </div>

  


